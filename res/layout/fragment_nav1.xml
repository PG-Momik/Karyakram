<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.nav1Fragment"
    android:id="@+id/container"
    android:orientation="vertical"
    android:paddingHorizontal="10dp">
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<!--Row 1    -->
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">
       <TextView
           android:paddingTop="25dp"
           android:id="@+id/row1_header"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Popular Events"
           android:visibility="invisible"
           android:fontFamily="sans-serif-condensed"
           android:textSize="22dp"
           android:textStyle="bold"
           android:paddingLeft="20dp"
           android:textColor="@color/ali_black"
           android:layout_weight="1"
           />
       <TextView
           android:id="@+id/viewAll"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="View All"
           android:layout_weight="1"
           android:layout_gravity="center_vertical"
           android:gravity="right"
           android:paddingRight="10dp"/>
   </LinearLayout>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        </LinearLayout>
    </HorizontalScrollView>
<!--Row 2-->
    <TextView
        android:id="@+id/row2_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Government Workshop"
        android:visibility="invisible"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
<!--Row 3-->
    <TextView
        android:id="@+id/row3_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Org Workshop"
        android:visibility="invisible"
        />
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    </HorizontalScrollView>

</LinearLayout>